<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EasyLife.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize other attributes as needed -->
        <item name="colorControlHighlight">@color/extra6</item>
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="textAppearanceBodySmall">@color/black</item>
        <item name="textAppearanceBodyMedium">@color/white</item>
        <item name="textAppearanceBodyLarge">@color/highlightedTextLight</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:spinnersShown">false</item>
        <item name="colorAccent">@color/secondaryLight</item>
        <item name="android:colorAccent">@color/primaryLight</item>
        <!-- Add more items for other text colors if needed -->
    </style>

    <style name="Theme.EasyLife" parent="Base.Theme.EasyLife.Light" />
</resources>