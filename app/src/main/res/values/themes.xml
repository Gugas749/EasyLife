    <style name="Base.Theme.EasyLife" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlHighlight">@color/extra6</item>
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="textAppearanceBodySmall">@color/black</item>
        <item name="textAppearanceBodyMedium">@color/white</item>
        <item name="textAppearanceBodyLarge">@color/highlightedTextLight</item>
    </style>

    <!--    button style-->
    <style name="PrimaryButton" parent="">
        <item name="backgroundColor">@color/primaryLight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>

    <!--    button style-->
    <style name="SecondaryButton" parent="">
        <item name="android:padding">@dimen/_9sdp</item>
        <item name="background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>

