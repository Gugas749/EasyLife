<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EasyLife.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="colorControlNormal">@color/extra5</item>
        <item name="colorControlHighlight">@color/extra6</item>

        <item name="textAppearanceBodySmall">@color/extra5</item>
        <item name="textAppearanceBodyMedium">@color/extra6</item>
        <item name="textAppearanceBodyLarge">@color/highlightedTextDark</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:textColor">@color/black</item><!-- OUTLINE BUTTON -->
        <item name="android:textColorPrimary">@color/white</item> <!-- cor dos dias e do picker do mes -->
        <item name="android:textColorSecondary">@color/white</item><!-- cor da semana tipo domingo segunda etc d s t q q s s -->
        <item name="android:spinnersShown">false</item>
        <item name="colorAccent">@color/secondaryLight</item>
        <item name="android:colorAccent">@color/primaryLight</item>
        <!-- Add more items for other text colors if needed -->
    </style>

    <style name="BaseSwitcher">
        <item name="switcher_width">@dimen/switcher_width</item>
        <item name="switcher_height">@dimen/switcher_height</item>
        <item name="switcher_on_color">@color/green</item>
        <item name="switcher_off_color">@color/red</item>
        <item name="switcher_icon_color">@color/extra6</item>
    </style>

    <style name="Theme.EasyLife" parent="Base.Theme.EasyLife.Dark" />
</resources>