<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.tutorial.TutorialEndFragment">

    <!--    -->
    <TextView
        android:id="@+id/textView_next_FragTutorialEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/_16sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:text="@string/general_finish"/>
    <TextView
        android:id="@+id/textView_previous_FragTutorialEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/_16sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:text="@string/general_previous"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_gravity="bottom|center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tutorialFragIndicator_1_FragTutorialEnd"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_90sdp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tutorialFragIndicator_2_FragTutorialEnd"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_90sdp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tutorialFragIndicator_3_FragTutorialEnd"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_90sdp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tutorialFragIndicator_4_FragTutorialEnd"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_90sdp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tutorialFragIndicator_5_FragTutorialEnd"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_90sdp"
            app:cardBackgroundColor="?attr/colorControlNormal"/>
    </LinearLayout>
    <!--    -->

    <ImageView
        android:id="@+id/imageView_FinishFlag_FragTutotialEnd"
        android:layout_marginBottom="@dimen/_61sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_77sdp"
        android:layout_height="@dimen/_77sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:src="@drawable/finish_flag"
        app:tint="?attr/colorControlNormal" />
    <TextView
        android:layout_gravity="center"
        android:textSize="@dimen/_31sdp"
        android:text="@string/tutorialFrag_End_Title"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:fontFamily="@font/coiny_regular"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_61sdp"
        android:layout_marginRight="@dimen/_23sdp"
        android:layout_marginLeft="@dimen/_23sdp"
        android:layout_gravity="center"
        android:textSize="@dimen/_23sdp"
        android:text="@string/tutorialFrag_End_Text"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:fontFamily="@font/dosis_regular"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>