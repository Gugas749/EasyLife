<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.alertDialogFragments.AlertDialogColorPickerFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15sp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_editTextHolder_AccountName_FragAlertDialogColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardCornerRadius="30sp"
            app:cardBackgroundColor="?attr/colorSecondary">
            <EditText
                android:id="@+id/editText_AccountName_FragAlertDialogColorPicker"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:padding="5sp"
                android:maxLines="1"
                android:hint="@string/mainAc_FragOverviewViewAddSpendingsAccount_editTextAccountName_Hint"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@null"/>
        </androidx.cardview.widget.CardView>
        <ir.kotlin.kavehcolorpicker.KavehColorPicker
            android:id="@+id/colorPicker_FragAlertDialogColorPicker"
            android:layout_below="@+id/cardView_editTextHolder_AccountName_FragAlertDialogColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ir.kotlin.kavehcolorpicker.KavehHueSlider
            android:id="@+id/hueSlider_FragAlertDialogColorPicker"
            android:layout_below="@+id/colorPicker_FragAlertDialogColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
        <ir.kotlin.kavehcolorpicker.KavehColorAlphaSlider
            android:id="@+id/colorAlphaSlider_FragAlertDialogColorPicker"
            android:layout_below="@+id/hueSlider_FragAlertDialogColorPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/colorAlphaSlider_FragAlertDialogColorPicker">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Cancel_AlertDialogFragment_ColorPicker"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:text="@string/general_cancel"
                android:textColor="?attr/textAppearanceBodySmall"
                android:background="@drawable/round_button_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Confirm_AlertDialogFragment_ColorPicker"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:text="@string/general_confirm"
                android:textColor="?attr/textAppearanceBodySmall"
                android:background="@drawable/round_button_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>