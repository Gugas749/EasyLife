<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:id="@+id/frameLayout_parent_FragMainACMainViewEditLayoutHowToDelete"
    tools:context=".fragments.mainactivityfragments.mainview.editlayouthowtofrags.MainACMainViewEditLayoutHowToDeleteFragment">

    <!--    -->
    <TextView
        android:id="@+id/textView_next_FragMainACMainViewEditLayoutHowToDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="3sp"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:text="@string/general_next"/>
    <TextView
        android:id="@+id/textView_previous_FragMainACMainViewEditLayoutHowToDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="20sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:text="@string/general_previous"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_gravity="bottom|center">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_FragIndicator_1_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="7sp"
            android:layout_height="7sp"
            android:layout_marginRight="5sp"
            app:cardCornerRadius="90sp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_FragIndicator_2_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="7sp"
            android:layout_height="7sp"
            android:layout_marginRight="5sp"
            app:cardCornerRadius="90sp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_FragIndicator_3_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="7sp"
            android:layout_height="7sp"
            android:layout_marginRight="5sp"
            app:cardCornerRadius="90sp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_FragIndicator_4_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="25sp"
            android:layout_height="7sp"
            android:layout_marginRight="5sp"
            app:cardCornerRadius="90sp"
            app:cardBackgroundColor="?attr/colorControlNormal"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_FragIndicator_5_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="7sp"
            android:layout_height="7sp"
            app:cardCornerRadius="90sp"
            app:cardBackgroundColor="?attr/colorSecondary"/>
    </LinearLayout>
    <!--    -->

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="30sp"
        android:text="@string/mainAc_FragMainViewEditLayoutHowTo_Delete_Title"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:fontFamily="@font/coiny_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20sp">
        <TextView
            android:id="@+id/textView_mainTextView_FragMainACMainViewEditLayoutHowToDelete"
            android:textSize="30sp"
            android:paddingRight="10sp"
            android:paddingLeft="10sp"
            android:layout_marginBottom="10sp"
            android:text="@string/mainAc_FragMainViewEditLayoutHowTo_Delete_Text_1"
            android:textColor="?attr/textAppearanceBodyMedium"
            android:textAlignment="center"
            android:fontFamily="@font/dosis_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_SwipeExplanation_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_below="@+id/textView_mainTextView_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="50sp"
            android:visibility="invisible"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardCornerRadius="25sp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_popupExplanation_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_below="@+id/textView_mainTextView_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_toEndOf="@+id/cardView_SwipeExplanation_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:visibility="invisible"
            app:cardCornerRadius="30sp"
            android:elevation="10sp"
            android:layout_marginLeft="20sp"
            android:src="@drawable/hand_pointing"
            app:cardBackgroundColor="?attr/colorControlNormal" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp">
                <TextView
                    android:id="@+id/textView_Title_AlertDialogQuestion_Example_FragMainACMainViewEditLayoutHowToDelete"
                    android:gravity="center_horizontal"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainAc_FragMainViewEditLayoutHowTo_Delete_PopUp_Title"/>
                <TextView
                    android:id="@+id/textView_description_AlertDialogQuestion_Example_FragMainACMainViewEditLayoutHowToDelete"
                    android:layout_below="@+id/textView_Title_AlertDialogQuestion_Example_FragMainACMainViewEditLayoutHowToDelete"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15sp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainAc_FragMainViewEditLayoutHowTo_Delete_PopUp_Description"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_below="@+id/textView_description_AlertDialogQuestion_Example_FragMainACMainViewEditLayoutHowToDelete">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_gravity="left"
                        android:textSize="20sp"
                        android:padding="5sp"
                        android:text="@string/general_no"
                        android:textColor="?attr/textAppearanceBodySmall"
                        android:background="@drawable/round_button_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_gravity="right"
                        android:textSize="20sp"
                        android:padding="5sp"
                        android:text="@string/general_yes"
                        android:textColor="?attr/textAppearanceBodySmall"
                        android:background="@drawable/round_button_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/imageView_pointingToImageView_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_below="@+id/cardView_SwipeExplanation_FragMainACMainViewEditLayoutHowToDelete"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:elevation="10sp"
            android:visibility="invisible"
            android:layout_marginLeft="40sp"
            android:src="@drawable/hand_pointing"
            app:tint="?attr/colorControlNormal" />
    </RelativeLayout>

</FrameLayout>