    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.mainactivityfragments.spendings_view.MainACSpendingsViewFragment">

    <TextView
        android:id="@+id/textView_noItemsToDisplay_FragMainACSpendingsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mainAc_FragSpendingsView_NoItemsToDisplay_Text"
        android:textStyle="bold"
        android:textColor="?attr/textAppearanceBodyMedium"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_margin="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_spendingsAccounts_FragMainACSpendingsView"
        android:layout_width="match_parent"
