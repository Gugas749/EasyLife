<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.alertDialogFragments.AlertDialogQuestionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_title_AlertDialogFragment_Question"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"/>

        <TextView
            android:id="@+id/textView_description_AlertDialogFragment_Question"
            android:layout_below="@+id/textView_title_AlertDialogFragment_Question"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_11sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_below="@+id/textView_description_AlertDialogFragment_Question">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Cancel_AlertDialogFragment_Question"
                android:layout_gravity="left"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_11sdp"
                android:paddingBottom="@dimen/_11sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:text="@string/general_cancel"
                android:textColor="?attr/textAppearanceBodySmall"
                android:background="@drawable/round_button_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Confirm_AlertDialogFragment_Question"
                android:layout_gravity="right"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_11sdp"
                android:paddingBottom="@dimen/_11sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:text="@string/general_confirm"
                android:textColor="?attr/textAppearanceBodySmall"
                android:background="@drawable/round_button_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </RelativeLayout>

</FrameLayout>