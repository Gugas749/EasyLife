<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="25sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_iconHolder_rvRowSpendingsAccounts_MainACOverview"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/confirm_icon"/>
            <TextView
                android:id="@+id/textView_accountNameHolder_rvRowSpendingsAccounts_MainACOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT NAME"
                android:layout_toEndOf="@+id/imageView_iconHolder_rvRowSpendingsAccounts_MainACOverview"
                android:padding="15sp"
                android:fontFamily="@font/dosis_regular"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>