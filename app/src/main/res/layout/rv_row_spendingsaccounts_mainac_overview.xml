<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_iconHolder_rvRowSpendingsAccounts_MainACOverview"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_31sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/wallet_icon"
                app:tint="?attr/textAppearanceBodySmall"/>
            <TextView
                android:id="@+id/textView_accountNameHolder_rvRowSpendingsAccounts_MainACOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT NAME"
                android:layout_toEndOf="@+id/imageView_iconHolder_rvRowSpendingsAccounts_MainACOverview"
                android:padding="@dimen/_11sdp"
                android:fontFamily="@font/dosis_regular"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>