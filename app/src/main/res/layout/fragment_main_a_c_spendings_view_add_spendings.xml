<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    tools:context=".fragments.mainactivityfragments.spendings_view.MainACSpendingsViewAddSpendingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TOP NAVIGATION -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_topNavigation_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20sp"
            app:cardCornerRadius="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_buttonExit_FragMainACSpendingsViewAddSpendings"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_gravity="start"
                android:layout_marginTop="35sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="20sp"
                android:padding="10sp"
                android:src="@drawable/cancel_icon" />
            <ImageView
                android:id="@+id/imageView_buttonHowToUse_FragMainACSpendingsViewAddSpendings"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:padding="7sp"
                android:visibility="gone"
                android:src="@drawable/questionpoint_icon" />
            <ImageView
                android:id="@+id/imageView_buttonConfirm_FragMainACSpendingsViewAddSpendings"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_gravity="end"
                android:layout_marginTop="35sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:padding="5sp"
                android:src="@drawable/confirm_icon" />
        </androidx.cardview.widget.CardView>
        <!--                -->
        <TextView
            android:id="@+id/textView_design_1_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/cardView_topNavigation_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:text="@string/mainAc_FragOverviewViewAddSpendingsAccount_textView_editTextHelper_1_Text"
            android:textStyle="bold"
            android:textColor="?attr/textAppearanceBodyMedium"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/linearLayout_textViewDateHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_design_1_FragMainACSpendingsViewAddSpendings">
            <TextView
                android:id="@+id/textView_date_FragMainACSpendingsViewAddSpendings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/mainAc_FragOverviewViewAddSpendingsAccount_textView_editTextHelper_1_Text"
                android:textStyle="bold"
                android:textColor="?attr/textAppearanceBodyMedium"
                android:textAlignment="center"
                android:textSize="20sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_ChangeHours_AlertDialogDateHourPicker"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:text="@string/general_change"
                android:textColor="?attr/textAppearanceBodySmall"
                android:background="@drawable/round_button_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_spinnerWhereExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/linearLayout_textViewDateHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="15dp"
            android:text="@string/alertDialog_LongPressMainViewObjects_TextView_SpendingsAccounts_Text"
            android:textAlignment="center"
            android:textColor="?attr/textAppearanceBodyMedium"
            android:textSize="@dimen/_18sdp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_spinnerWhereHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/textView_spinnerWhereExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardCornerRadius="30sp">
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_Where_FragMainACSpendingsViewAddSpendings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_gravity="center"
                android:background="?attr/colorSecondary"
                android:gravity="center"
                android:hint="@string/alertDialog_LongPressMainViewObjects_spinner_SpendingsAccounts_StarterText"
                android:padding="10dp"
                android:textColor="?attr/textAppearanceBodySmall"
                android:textColorHint="?attr/textAppearanceBodySmall"
                android:textSize="16sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="?attr/textAppearanceBodySmall"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_height="46dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/round_corners_alert_dialog"
                app:spinner_popup_elevation="14dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView_spinnerSpendigsAccountsExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/cardView_spinnerWhereHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="15dp"
            android:text="@string/alertDialog_LongPressMainViewObjects_TextView_SpendingsAccounts_Text"
            android:textAlignment="center"
            android:textColor="?attr/textAppearanceBodySmall"
            android:textSize="@dimen/_18sdp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_spinnerSpendigsAccountsHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/textView_spinnerSpendigsAccountsExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardCornerRadius="30sp">
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_spendigsAccounts_FragMainACSpendingsViewAddSpendings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_gravity="center"
                android:background="?attr/colorSecondary"
                android:gravity="center"
                android:hint="@string/alertDialog_LongPressMainViewObjects_spinner_SpendingsAccounts_StarterText"
                android:padding="10dp"
                android:textColor="?attr/textAppearanceBodySmall"
                android:textColorHint="?attr/textAppearanceBodySmall"
                android:textSize="16sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="?attr/textAppearanceBodySmall"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_height="46dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/round_corners_alert_dialog"
                app:spinner_popup_elevation="14dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView_spinnerSpendigsSubAccountsExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/cardView_spinnerSpendigsAccountsHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="15dp"
            android:text="@string/alertDialog_LongPressMainViewObjects_TextView_SpendingsSubAccounts_Text"
            android:textAlignment="center"
            android:textColor="?attr/textAppearanceBodySmall"
            android:textSize="@dimen/_18sdp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_spinnerSpendigsSubAccountsHolder_FragMainACSpendingsViewAddSpendings"
            android:layout_below="@+id/textView_spinnerSpendigsSubAccountsExplain_FragMainACSpendingsViewAddSpendings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardCornerRadius="30sp">
            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_spendigsSubAccounts_FragMainACSpendingsViewAddSpendings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_gravity="center"
                android:background="?attr/colorSecondary"
                android:gravity="center"
                android:hint="@string/alertDialog_LongPressMainViewObjects_spinner_SpendingsSubAccounts_StarterText"
                android:padding="10dp"
                android:textColor="?attr/textAppearanceBodySmall"
                android:textColorHint="?attr/textAppearanceBodySmall"
                android:textSize="16sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="?attr/textAppearanceBodySmall"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_height="46dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/round_corners_alert_dialog"
                app:spinner_popup_elevation="14dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>